/* Ajuste: elimina el exceso de espacio vertical en relacionados */
.related-row {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
  gap: 8px; /* antes solía ser 16 o más */
  align-items: start;
  margin-top: 8px !important;
}

